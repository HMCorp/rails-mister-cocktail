<p>Create a new dose for a given cocktail</p>
<p>Well actually that's for cocktail <%= @dose.cocktail.name %></p>

<%= simple_form_for([@dose.cocktail, @dose]) do |f| %>

  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <div class="form-inputs">
    <%= f.association :ingredient %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>


<%= link_to "Back to homepage", cocktails_path %>
